<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".register.VhodFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="306dp"
            android:layout_height="328dp"
            android:layout_marginTop="161dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/dark_grey_fill">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/lavender"
                    android:text="ВХОД"
                    android:letterSpacing="0.14"
                    android:lineHeight="20dp"
                    android:textSize="27sp"
                    android:layout_marginTop="52dp"/>

                <ImageView
                    android:layout_marginTop="58dp"

                    android:layout_marginHorizontal="52dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/poloska_zapolneniya_text" />
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="52dp"
                    android:layout_marginTop="5dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailVhodText"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Почта"
                        android:textColorHint="@color/hint"
                        android:textSize="14dp"/>

                </com.google.android.material.textfield.TextInputLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="52dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/poloska_zapolneniya_text" />

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="52dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordVhodText"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Пароль"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/vhod_button"
                    android:layout_width="174dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:text="Вход"
                    android:textColor="@color/white"
                    android:background="@drawable/lavender_fill"
                    android:textSize="18sp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/to_register_button"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:layout_marginTop="98dp"
            android:gravity="center"
            android:text="Регистрация"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/to_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Забыли пароль?"
            android:background="@android:color/transparent"
            android:textSize="14sp"/>
    </LinearLayout>
</ScrollView>
